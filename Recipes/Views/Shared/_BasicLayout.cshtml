<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/RecipeStyles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css" />
</head>

<body class="body">
    <nav class="navbar navbar-expand-md bg-light justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="RecipeList">Recipes</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                </li>
            }
        </ul>
    </nav>
    <div class="text-center">
        <p><h3><i class="fa fa-book"></i> ReciPedia</h3></p>
    </div>

    <div id="article">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>